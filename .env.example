# Forest-Stack Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control - keep your secrets safe!

# =============================================================================
# SATELLITE DATA API KEYS & ENDPOINTS
# =============================================================================

# Microsoft Planetary Computer Subscription Key
# Get your key from: https://planetarycomputer.microsoft.com/
PLANETARY_SUB_KEY=your_planetary_computer_subscription_key_here

# STAC Catalog URLs (usually don't need to change these)
PLANETARY_STAC_URL=https://planetarycomputer.microsoft.com/api/stac/v1
ELEMENT84_STAC_URL=https://earth-search.aws.element84.com/v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# DuckDB Database Path (for groundwater, soil moisture, and other modules)
DB_PATH=dfhms.db

# PostgreSQL/PostGIS Connection
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DATABASE=forest_stack
# POSTGRES_USERNAME=your_username
# POSTGRES_PASSWORD=your_password
# POSTGRES_URL=postgresql://username:password@host:port/database

# =============================================================================
# FILE PATHS & DATA DIRECTORIES
# =============================================================================

# Base data directory for input/output files
DATA_DIR=./data

# Specific directories for different data types
GROUNDWATER_DATA_PATH=data/groundwater_depth/Atal_Jal_Disclosed_Ground_Water_Level-2015-2022-utf8.csv
SUBDISTRICTS_PATH=data/gis/ranges-withcode-geom.shp
TIFF_DIR=./data/soilmoisture_tiffs
OUTPUT_DIR=./data/soilmoisture_output
CACHE_DIR=./data/soilmoisture_cache

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment mode (development, production, testing)
ENVIRONMENT=development

# Debug logging (true/false)
DEBUG=false

# Cache settings
ENABLE_CACHE=true
CACHE_EXPIRY_HOURS=24
